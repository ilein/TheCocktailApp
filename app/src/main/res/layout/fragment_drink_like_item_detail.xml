<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DrinkLikeItemDetailFragment">

    <FrameLayout
        android:id="@+id/loadingLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/pbLoadingLike"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lCardItemLike"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/poster_like"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:focusable="auto"
            android:focusableInTouchMode="false"
            tools:src="@tools:sample/avatars" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/drinkTitle_like"
                    style="@style/TextAppearance.Material3.HeadlineLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:text="@tools:sample/lorem/random" />

                <Button
                    android:id="@+id/btnExpandIngredientsLike"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="0"
                    android:text="@string/ingredient_label"
                    android:textAlignment="viewStart"
                    app:icon="@drawable/ic_expand_more" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ingredients_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="clip_horizontal|center_horizontal|left"
                    android:maxLines="10"
                    android:textSize="20sp"
                    tools:text="@tools:sample/lorem/random" />

                <Button
                    android:id="@+id/btnExpandInstructionsLike"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="0"
                    android:text="@string/instructions_label"
                    android:textAlignment="viewStart"
                    app:icon="@drawable/ic_expand_more" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/instructions_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="clip_horizontal|center_horizontal|left"
                    android:maxLines="15"
                    android:textSize="20sp"
                    tools:text="@tools:sample/lorem/random" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tiDrinkLikeNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your note for this coctail"
                        android:lines="3" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ibSave"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:scaleType="fitCenter"
                        android:text="Save"
                        app:icon="@drawable/ic_save" />

                    <Button
                        android:id="@+id/ibSend_like"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:scaleType="fitCenter"
                        android:text="Send"
                        app:icon="@drawable/ic_send" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>