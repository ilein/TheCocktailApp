<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DrinkLikeItemDetailFragment">

    <FrameLayout
        android:id="@+id/loadingLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/pbLoadingLike"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lCardItemLike"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/poster_like"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            tools:src="@tools:sample/avatars" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/drinkTitle_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:text="@tools:sample/lorem/random" />

                <TextView
                    android:id="@+id/twLabelIngredients_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="auto"
                    android:focusableInTouchMode="true"
                    android:gravity="clip_horizontal|center_horizontal|left"
                    android:text="@string/ingredient_label_down"
                    android:textColor="#2196F3"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/ingredients_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="clip_horizontal|center_horizontal|left"
                    android:maxLines="10"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    tools:text="@tools:sample/lorem/random" />

                <TextView
                    android:id="@+id/twLabelInstructions_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="auto"
                    android:focusableInTouchMode="true"
                    android:gravity="clip_horizontal|center_horizontal|left"
                    android:text="@string/instructions_label_down"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/instructions_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:gravity="clip_horizontal|center_horizontal|left"
                    android:maxLines="15"
                    android:textSize="20sp"
                    tools:text="@tools:sample/lorem/random" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tiDrinkLikeNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your note for this coctail"
                        android:lines="3" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibSave"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/save" />

                    <ImageButton
                        android:id="@+id/ibSend_like"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/telegram_logo" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>